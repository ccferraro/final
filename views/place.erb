<div class="row">
    <div class="col-sm-9">
        <h1><%= @place[:title] %></h1>
        <p><%= @place[:description] %></p>

        <% for reviews in @reviews %>
            <div class="media">
                <% if reviews[:recommend] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0">
 


                    </h5>
                    <%= @reviews %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/places/<%= @place[:id] %>/reviews/new" class="btn btn-primary">Add Review!</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to Review</a>
            <% end %>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>Where?</h3>
        <p><%= @place[:location] %></p>
        <h3>How many recommend this place?</h3>
        <p>
            <i class="fas fa-thumbs-up fa-3x mr-3"></i>
            <%= @recommend_count %>
            </p>
        <p>
            <i class="fas fa-thumbs-down fa-3x mr-3"></i>
            <%= @noreco_count %>
            </p>
    </div>
</div>