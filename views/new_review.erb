<h1>New review for <%= @place[:title] %></h1>

<form action="/places/<%= @place[:id] %>/reviews/create" method="post">

  <div class="form-group">
    <label>Write your review here</label>
    <textarea class="form-control" rows="3" name="review"></textarea>
  </div>
  
  <div class="form-group">
    <label>Would you recommend this place?</label>
    <select class="form-control" name="recommend">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </select>
  </div>


  <button type="submit" class="btn btn-primary">Submit</button>
</form>